#include "libft.h"
#include "rush02.h"

int	main(int argc, char **argv)
{
	int	len;
	char	dict[60000];
	int	fd;

	len = 0;
	fd = open("anglais.dict", O_RDONLY, 0600);
	if (fd == -1)
	{
		printf("\nError");
		return (0);
	}
	if (argc == 2)
	{
		len = read(fd, dict, 60000);
		if (len == -1 || len == 0)
		{
			close(fd);
			return (0);
		}
		printf("%s\n", dict);
		close(fd);
	}
	if (argc == 3)
		ft_printf("\nDictionnaire = %s\nValeur = %s\n", argv[1], argv[2]);
}
